@*
    Pages/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - 排班系統</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- 自訂樣式 -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/leaderboard.css" />
</head>
<body>
    <div class="app-shell d-flex flex-column min-vh-100">
        <!-- 頂端列 -->
        <header>
            @await Html.PartialAsync("_TopBar")
        </header>

        <div class="app-body d-flex flex-grow-1">
            <!-- 左邊側邊選單 -->
            <aside class="app-sidebar">
                @await Html.PartialAsync("_Sidebar")
            </aside>

            <!-- 主內容 -->
            <main class="app-main flex-grow-1">
                <div class="container-fluid py-3">
                    @RenderBody()
                </div>
            </main>
        </div>

        <footer class="app-footer text-center small text-muted py-2">
            &copy; @DateTime.Now.Year - 排班系統
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- TopBar 讀取登入狀態 -->
    <script type="module" src="~/js/app/topbar-auth.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
