@page
@{
    ViewData["Title"] = "登入";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h4 class="mb-4 text-center">登入排班系統</h4>

                <form id="login-form">
                    <div class="mb-3">
                        <label for="username" class="form-label">帳號</label>
                        <input type="text" id="username" class="form-control" autocomplete="username" required />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">密碼</label>
                        <input type="password" id="password" class="form-control" autocomplete="current-password" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">登入</button>
                    </div>

                    <div id="login-error" class="text-danger small mt-3" style="display:none;"></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/auth/login.js"></script>
}
